generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/db.db"
}

model User {
  id    Int     @id @default(autoincrement())
  oauth_id String @unique
  email String  @unique
  name  String?
  is_school_admin Boolean @default(false)
  classes Class[]
}

model Assignment{
  id      Int   @id @default(autoincrement())
  createdAt DateTime @default(now())
  name  String
  description String
  pointsWorth Int
  classId Int
  class Class @relation(fields: [classId], references: [id])
}


model Class {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name     String
  prefix String
  number String @unique
  enrolled Int
  capacity Int
  students User[]
  assignment Assignment[]
}
